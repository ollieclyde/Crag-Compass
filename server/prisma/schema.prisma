generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crag {
  crag_id         Int    @id @unique @default(autoincrement())
  name            String
  location        String
  country         String
  ukc_url         String
  faces           String
  osx             String
  osy             String
  route_count     Int
  rock_type       String

  routes   Route[]
  cragInfo CragInfo?

  climbing_type    ClimbingType[]
}

model ClimbingType {
  climbing_type_id Int     @id @unique @default(autoincrement())
  name             String
  crag             Crag[]
  route            Route[]
}

model CragInfo {
  crag_info_id Int    @id @default(autoincrement())
  img          String
  features     String
  approach     String
  accessType   Int
  accessNotes  String

  crag_id Int  @unique
  crag    Crag @relation(fields: [crag_id], references: [crag_id])
}

model Route {
  route_id Int    @id @unique @default(autoincrement())
  name     String
  grade    String
  stars    Int
  logs     Int

  crag_id Int
  crag    Crag @relation(fields: [crag_id], references: [crag_id])

  climbing_type_id Int          @unique
  climbing_type    ClimbingType @relation(fields: [climbing_type_id], references: [climbing_type_id])
}
