generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crag {
  cragID     Int    @id @unique @default(autoincrement())
  name       String
  location   String
  country    String
  ukcURL     String
  faces      String
  osx        String
  osy        String
  routeCount Int
  rockType   String

  routes   Route[]
  cragInfo CragInfo?

  climbingType ClimbingType[]
}

model ClimbingType {
  climbingTypeID Int     @id @unique @default(autoincrement())
  name           String
  crag           Crag[]
  route          Route[]
}

model CragInfo {
  cragInfoID  Int    @id @default(autoincrement())
  img         String
  features    String
  approach    String
  accessType Int
  accessNote String

  cragID Int  @unique
  crag   Crag @relation(fields: [cragID], references: [cragID])
}

model Route {
  routeID Int    @id @unique @default(autoincrement())
  name    String
  grade   String
  stars   Int
  logs    Int

  cragID Int
  crag   Crag @relation(fields: [cragID], references: [cragID])

  climbingTypeID Int
  climbingType   ClimbingType @relation(fields: [climbingTypeID], references: [climbingTypeID])
}
